{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Song": {
      "type": "object",
      "properties": {
        "disk": {
          "$ref": "#/definitions/Disk"
        },
        "track": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "length": {
          "type": [
            "string",
            "null"
          ]
        },
        "artist": {
          "$ref": "#/definitions/Artist"
        },
        "diskName": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "track",
        "name",
        "artistName",
        "diskId"
      ]
    },
    "Disk": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "artist": {
          "$ref": "#/definitions/Artist"
        },
        "barcode": {
          "type": [
            "string",
            "null"
          ]
        },
        "year": {
          "type": "integer"
        },
        "genre": {
          "type": [
            "string",
            "null"
          ]
        },
        "format": {
          "type": [
            "string",
            "null"
          ]
        },
        "style": {
          "type": [
            "string",
            "null"
          ]
        },
        "Song": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Song"
          }
        },
        "location": {
          "type": "string"
        },
        "case": {
          "type": [
            "boolean",
            "null"
          ],
          "default": true
        },
        "img": {
          "type": [
            "string",
            "null"
          ],
          "default": "/download.jpg"
        },
        "checkedOutBy": {
          "anyOf": [
            {
              "$ref": "#/definitions/User"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "name",
        "id",
        "artistName",
        "year",
        "location"
      ]
    },
    "Artist": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "img": {
          "type": [
            "string",
            "null"
          ]
        },
        "Song": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Song"
          }
        },
        "Disk": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Disk"
          }
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Label": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "User": {
      "type": "object",
      "properties": {
        "checkedOutDisks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Disk"
          }
        },
        "id": {
          "type": "integer"
        },
        "email": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password_hash": {
          "type": "string"
        },
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Session"
          }
        },
        "salt": {
          "type": "string"
        },
        "passwordResets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PasswordResetSession"
          }
        },
        "role": {
          "type": "string",
          "default": "admin"
        }
      },
      "required": [
        "email",
        "username",
        "password_hash",
        "salt"
      ]
    },
    "Session": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "expires_at": {
          "type": "string",
          "format": "date-time"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "id",
        "user_id",
        "expires_at"
      ]
    },
    "PasswordResetSession": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "expires_at": {
          "type": "integer"
        },
        "email_verified": {
          "type": "integer",
          "default": 0
        },
        "two_factor_verified": {
          "type": "integer",
          "default": 0
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "id",
        "user_id",
        "email",
        "code",
        "expires_at"
      ]
    }
  },
  "type": "object",
  "properties": {
    "song": {
      "$ref": "#/definitions/Song"
    },
    "disk": {
      "$ref": "#/definitions/Disk"
    },
    "artist": {
      "$ref": "#/definitions/Artist"
    },
    "label": {
      "$ref": "#/definitions/Label"
    },
    "user": {
      "$ref": "#/definitions/User"
    },
    "session": {
      "$ref": "#/definitions/Session"
    },
    "passwordResetSession": {
      "$ref": "#/definitions/PasswordResetSession"
    }
  }
}